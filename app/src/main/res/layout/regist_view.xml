<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/divider_color">

    <widget.ToolBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:src="@mipmap/logo_03" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="请输入您的手机号码"
                    android:padding="7dp"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/divider_color"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/vertify_code"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:hint="请输入短信验证码"
                        android:padding="7dp"
                        android:textColor="@color/main_title_color"
                        android:textColorHint="@color/divider_color"
                        android:textSize="14dp" />

                    <widget.CountDownTextView
                        android:gravity="center"
                        android:id="@+id/vertify_button"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_red_corner"
                        android:padding="10dp"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/set_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:hint="请设置密码"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/divider_color"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/cofirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColor="@color/main_title_color"
                    android:textColorHint="@color/divider_color"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/confirm_regist"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_orange_corner"
                    android:text="确认注册"
                    android:textColor="@color/white"

                    />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="点击确认注册,即代表同意" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="《都是民工注册使用协议》"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
