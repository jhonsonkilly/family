<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:id="@+id/rank_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/theme_color">



            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@color/theme_color"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/title_1"

                    android:layout_width="70dp"
                    android:layout_height="29dp"
                    android:background="@drawable/selector_rank_guard_back"
                    android:gravity="center"
                    android:text="最近"
                    android:textColor="@drawable/selector_rank_tx"

                    />


                <TextView
                    android:id="@+id/title_2"
                    android:layout_width="70dp"
                    android:layout_height="29dp"
                    android:background="@drawable/selector_rank_week_back"
                    android:gravity="center"
                    android:text="最新"
                    android:textColor="@drawable/selector_rank_tx"
                    android:textSize="14dp" />


                <TextView

                    android:id="@+id/title_3"
                    android:layout_width="70dp"
                    android:layout_height="29dp"
                    android:background="@drawable/selector_rank_all_back"
                    android:gravity="center"
                    android:text="精华"
                    android:textColor="@drawable/selector_rank_tx"

                    android:textSize="14dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/show_03" />
        </RelativeLayout>


    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color" />

</LinearLayout>
